//用户注册
curl --location 'localhost:8080/user/register' \
--header 'Content-Type: application/json' \
--data-raw '{
    "username": "Alice",
    "email": "alice@example.com",
    "password": "123"
}'
//result
{
    "message": "User registered successfully"
}


//用户登录
curl --location 'localhost:8080/user/login' \
--header 'Content-Type: application/json' \
--data '{
    "username": "张三",
    "password": "123"
}'

{
    "msg": "登录通过",
    "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJleHAiOjE3NTQzNzk4MjcsImlkIjo2LCJ1c2VybmFtZSI6IuW8oOS4iSJ9.J3RVU8tC4djXfsOw1iP75yb_iqhm1P8M3gkbwwU5LuM"
}


//文章新增
