    "msg": "文章新增成功"
}

//文章修改
curl --location 'localhost:8080/post/update' \
--header 'Authorization: Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJleHAiOjE3NTQzODIyNzIsImlkIjo2LCJ1c2VybmFtZSI6IuW8oOS4iSJ9.W8cEIvJildCftZoSYdKyNFH05ZsqKAYk8-eADoKYtsg' \
